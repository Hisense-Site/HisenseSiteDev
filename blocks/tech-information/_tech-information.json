      "id": "tech-information",
      "fields": [
        {
          "component": "select",
          "name": "classes",
          "label": "Image Position",
          "valueType": "string",
          "value": "img-right",
          "options": [
              {
                "name": "Image Position Left",
                "value": "img-left"
              },
              {
                "name": "Image Position Right",
                "value": "img-right"
              }
          ]
        },
        {
          "component": "reference",
          "valueType": "string",
          "name": "tech_image",
          "label": "Image",
          "multi": false
        },
        {
          "component": "text",
          "name": "info_component_type",
          "value": "component-tech-info",
          "hidden": true,
          "readonly": true
        },
        {
          "component": "text",
          "valueType": "string",
          "name": "info_title",
          "label": "Title"
        },
        {
          "component": "text",
          "valueType": "string",
          "name": "info_subtitle",
          "label": "SubTitle"
        },
        {
          "component": "text",
          "valueType": "string",
          "name": "info_text",
          "label": "Text"
        },
        {
          "component": "aem-content",
          "name": "btn-cta",
          "label": "Button Link",
          "valueType": "string"
        },
        {
          "component": "text",
          "name": "btn-ctaLabel",
          "label": "Button",
          "valueType": "string"
        }
      ]
    },
    {
      "id": "tech-items",
      "fields": [
        {
          "component": "text",
          "name": "component_type",
          "value": "component-tech-items",
          "hidden": true,
          "readonly": true
        },
        {
          "component": "select",
          "name": "item-style",
          "label": "Style",
          "valueType": "string",
          "value": "icon-style",
          "options": [
              {
                "name": "Icon",
                "value": "icon-style"
              },
              {
                "name": "Stats",
                "value": "stats-style"
              }
          ]
        },
        {
          "component": "reference",
          "valueType": "string",
          "condition": { "===": [{"var" : "item-style"}, "icon-style"] },
          "name": "icon",
          "label": "Icon",
          "multi": false
        },
        {
          "component": "text",
          "name": "item_title",
          "label": "Title",
          "valueType": "string"
        },
        {
          "component": "text",
          "name": "item_text",
          "label": "Text",
          "valueType": "string"
        }
      ]
    }
